<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/keyboard_background"
    android:gravity="center_horizontal">

    <!-- Status Text - Larger for visibility -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/voice_input_hint"
        android:textColor="@color/keyboard_text"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Waveform Visualizer -->
    <FrameLayout
        android:id="@+id/waveform_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible">

        <View
            android:id="@+id/waveform_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Mic Button -->
    <ImageButton
        android:id="@+id/mic_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/mic_button_background"
        android:contentDescription="@string/mic_button_description"
        android:src="@drawable/ic_mic"
        android:scaleType="centerInside"
        android:padding="20dp" />

    <!-- Emoji Grid - 2 rows of 5 -->
