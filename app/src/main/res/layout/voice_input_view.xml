        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Utility Row with Space and Enter -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp">

        <!-- Backspace Button -->
        <ImageButton
            android:id="@+id/backspace_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/backspace_description"
            android:src="@drawable/ic_backspace"
            android:scaleType="centerInside"
            android:padding="12dp" />

        <!-- Space Button -->
        <Button
            android:id="@+id/space_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="3"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/utility_button_background"
            android:text="@string/space_button"
            android:textColor="@color/keyboard_text"
            android:textSize="12sp"
            android:textAllCaps="false" />

        <!-- Enter Button -->
        <Button
            android:id="@+id/enter_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1.5"
            android:layout_marginEnd="4dp"
            android:background="@drawable/utility_button_background"
            android:text="@string/enter_button"
            android:textColor="@color/keyboard_text"
            android:textSize="12sp"
            android:textAllCaps="false" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/settings_description"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>
