<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/keyboard_background"
    android:paddingTop="8dp">

    <!-- Row 1: 1 2 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp">

        <Button
            android:id="@+id/key_1"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="1"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/key_2"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="2"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/key_3"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="3"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Row 2: 4 5 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp">

        <Button
            android:id="@+id/key_4"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="4"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/key_5"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="5"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/key_6"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="6"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Row 3: 7 8 9 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp">

        <Button
            android:id="@+id/key_7"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="7"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/key_8"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="8"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/key_9"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="9"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Row 4: . 0 , -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp">

        <Button
            android:id="@+id/key_dot"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="."
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/key_0"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text="0"
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/key_comma"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:background="@drawable/keyboard_key_background"
            android:text=","
            android:textColor="@color/keyboard_text"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- Bottom Utility Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="6dp"
        android:paddingHorizontal="8dp">

        <!-- ABC button - switch to QWERTY -->
        <Button
            android:id="@+id/btn_abc"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/utility_button_background"
            android:text="ABC"
            android:textColor="@color/keyboard_text"
            android:textSize="14sp"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <!-- Voice button - switch to voice -->
        <ImageButton
            android:id="@+id/btn_voice"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.8"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/mic_button_description"
            android:src="@drawable/ic_mic"
            android:scaleType="centerInside"
            android:padding="12dp" />

        <!-- Space -->
        <Button
            android:id="@+id/btn_space"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/utility_button_background"
            android:text="@string/space_button"
            android:textColor="@color/keyboard_text"
            android:textSize="12sp"
            android:textAllCaps="false" />

        <!-- Backspace -->
        <ImageButton
            android:id="@+id/btn_backspace"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="0.8"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/backspace_description"
            android:src="@drawable/ic_backspace"
            android:scaleType="centerInside"
            android:padding="12dp" />

        <!-- Enter -->
        <Button
            android:id="@+id/btn_enter"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/utility_button_background"
            android:text="@string/enter_button"
            android:textColor="@color/keyboard_text"
            android:textSize="12sp"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
