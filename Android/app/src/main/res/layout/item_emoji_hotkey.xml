<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Checkbox on the left -->
    <CheckBox
        android:id="@+id/keyboard_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:contentDescription="Show on keyboard" />

    <!-- Delete button on far right -->
    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/delete"
        android:src="@drawable/ic_delete" />

    <!-- Edit button next to delete -->
    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/delete_button"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit"
        android:src="@drawable/ic_edit" />

    <!-- Emoji (large) -->
    <TextView
        android:id="@+id/emoji_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/keyboard_checkbox"
        android:layout_toStartOf="@id/edit_button"
        android:textSize="28sp"
        android:textColor="#000000" />

    <!-- Trigger text underneath emoji -->
    <TextView
        android:id="@+id/trigger_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emoji_text"
        android:layout_toEndOf="@id/keyboard_checkbox"
        android:layout_toStartOf="@id/edit_button"
        android:textSize="13sp"
        android:textColor="#666666" />

</RelativeLayout>
