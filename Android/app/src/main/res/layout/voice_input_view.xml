<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/keyboard_background">

    <!-- Top Row: Status/Waveform on left, Mic button on right -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingTop="6dp">

        <!-- Left: Status text + Waveform stacked -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginEnd="8dp">

            <!-- Status Text -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voice_input_hint"
                android:textColor="@color/keyboard_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Waveform Visualizer -->
            <FrameLayout
                android:id="@+id/waveform_container"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:visibility="invisible">

                <View
                    android:id="@+id/waveform_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </LinearLayout>

        <!-- Mic Button -->
        <ImageButton
            android:id="@+id/mic_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/mic_button_background"
            android:contentDescription="@string/mic_button_description"
            android:src="@drawable/ic_mic"
            android:scaleType="centerInside"
            android:padding="14dp" />

    </LinearLayout>

    <!-- Emoji Grid - 2 rows of 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="4dp">

        <!-- Row 1: Emojis 1-5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/emoji_1"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ‘"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/emoji_2"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="â¤ï¸"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/emoji_3"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ˜‚"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/emoji_4"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ˜Š"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/emoji_5"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ™"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Row 2: Emojis 6-10 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/emoji_6"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ˜¢"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/emoji_7"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ˜®"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/emoji_8"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸŽ‰"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/emoji_9"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ”¥"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/emoji_10"
                style="@style/EmojiButton"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="âœ…"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Utility Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:paddingVertical="6dp">

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.8"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/settings_description"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="10dp" />

        <!-- 123 Button - switch to numeric -->
        <Button
            android:id="@+id/numeric_mode_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.8"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/utility_button_background"
            android:text="123"
            android:textColor="@color/keyboard_text"
            android:textSize="14sp"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <!-- Space Button -->
        <Button
            android:id="@+id/space_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="4dp"
            android:background="@drawable/utility_button_background"
            android:text="@string/space_button"
            android:textColor="@color/keyboard_text"
            android:textSize="12sp"
            android:textAllCaps="false" />

        <!-- ABC Button - switch to QWERTY -->
        <Button
            android:id="@+id/qwerty_mode_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="0.8"
            android:layout_marginEnd="4dp"
            android:background="@drawable/utility_button_background"
            android:text="ABC"
            android:textColor="@color/keyboard_text"
            android:textSize="14sp"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <!-- Backspace Button -->
        <ImageButton
            android:id="@+id/backspace_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1.3"
            android:layout_marginEnd="4dp"
            android:background="@drawable/utility_button_background"
            android:contentDescription="@string/backspace_description"
            android:src="@drawable/ic_backspace"
            android:scaleType="centerInside"
            android:padding="10dp" />

        <!-- Enter Button -->
        <Button
            android:id="@+id/enter_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1.1"
            android:background="@drawable/utility_button_background"
            android:text="@string/enter_button"
            android:textColor="@color/keyboard_text"
            android:textSize="12sp"
            android:textAllCaps="false" />

    </LinearLayout>

</LinearLayout>
